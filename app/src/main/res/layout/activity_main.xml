<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nankai.clubmanager.activity.MainActivity">


    <!--中间内容-->
    <FrameLayout android:id="@+id/fragmentPager"
        android:layout_width="match_parent"
        android:layout_height="550dp"/>

    <!--底部导航栏-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingBottom="4dp"
        android:elevation="4dp">

        <com.nankai.library.NaviView
            android:id="@+id/view_homepage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:gravity="center"
            app:bigIconSrc="@drawable/pre_homepage_big"
            app:iconWidth="50dp"
            app:iconHeight="50dp"
            app:range="1.2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="主页"/>

        </com.nankai.library.NaviView>

        <com.nankai.library.NaviView
            android:id="@+id/view_found"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            app:bigIconSrc="@drawable/pre_found_big"
            app:smallIconSrc="@drawable/pre_found_small"
            app:iconWidth="50dp"
            app:iconHeight="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="发现"/>

        </com.nankai.library.NaviView>

        <com.nankai.library.NaviView
            android:id="@+id/view_manage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            app:bigIconSrc="@drawable/pre_manage"
            app:iconWidth="50dp"
            app:iconHeight="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="管理" />
        </com.nankai.library.NaviView>

        <com.nankai.library.NaviView
            android:id="@+id/view_regist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            app:bigIconSrc="@drawable/pre_regist_big"
            app:smallIconSrc="@drawable/pre_regist_small"
            app:iconWidth="50dp"
            app:iconHeight="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="报名" />

        </com.nankai.library.NaviView>

    </LinearLayout>

</RelativeLayout>
