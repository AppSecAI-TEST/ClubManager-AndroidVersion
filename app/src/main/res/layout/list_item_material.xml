<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="80dp">
        <!-- Bottom View Start-->
        <LinearLayout
            android:id="@+id/material_item_bottom_wrapper"
            android:layout_width="150dp"
            android:layout_height="100dp">
            <LinearLayout
                android:background="#707070"
                android:layout_width="75dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/material_item_view"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/view"/>
            </LinearLayout>
            <LinearLayout
                android:background="#FF0000"
                android:layout_width="75dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/material_item_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="23dp"
                    android:src="@drawable/delete"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Surface View Start -->
        <LinearLayout
            android:padding="10dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--What you want to show in SurfaceView-->
            <TextView
                android:id="@+id/manage_material_name"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/material_name_bg"
                android:text="桌子"
                android:textColor="#FFFFFF"
                android:textSize="25sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/manage_material_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                    android:text="数量：100"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/manage_materail_extra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:text="备注：这是我们部门的桌子。。。"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
        <!-- Surface View End -->
    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>